@model SIGEES.Web.Models.Bean.BeanItemTipoAcceso

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hdCodigo" />
<input type="hidden" id="hdCantidadRegistros" />

<div style="width: 99%; background-color: #D3EBDE; vertical-align: middle; padding-top: 2%; padding-bottom: 2%; padding-left: 1%">

    <center>
        <h2>Mantenimiento Persona</h2>
    </center>


    @if (Model.estadoEscritura.CompareTo("A") == 0)
    {
        <a href="javascript:void(0)" id="btnNuevo" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-add'">Nuevo</a>
    }
    @if (Model.estadoModificacion.CompareTo("A") == 0)
    {
        <a href="javascript:void(0)" id="btnModificar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-edit'">Modificar</a>
    }
    @if (Model.estadoEliminacion.CompareTo("A") == 0)
    {
        <a href="javascript:void(0)" id="btnEliminar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-cancel'">Eliminar</a>
    }
    @if (Model.estadoLectura.CompareTo("A") == 0)
    {
        <a href="javascript:void(0)" id="btnVisualizar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-search'">Detalle</a>
        <a href="javascript:void(0)" id="btnRefrescar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-reload'">Refrescar</a>
    }
</div>
<br />
<div style="width: 99%; padding-left: 1%">
    @if (Model.estadoLectura.CompareTo("A") == 0)
    {
        <table id="DataGrid" style="width: 100%"></table>
    }
</div>

@Html.Partial("_Registrar")
@Html.Partial("_Modificar")
@Html.Partial("_Visualizar")

@section scripts
{
    <script type="text/javascript" src="~/Scripts/Views/Persona/project.Persona.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var actionUrls =
            {
                GetRegistrosJSON: '@Url.Action("GetRegistrosJSON", "Persona")',
                GetRegistro: '@Url.Action("GetRegistro", "Persona")',
                Modificar: '@Url.Action("Modificar", "Persona")',
                Eliminar: '@Url.Action("Eliminar", "Persona")',
                Registrar: '@Url.Action("Registrar", "Persona")',
                GetCorporacionJSON: '@Url.Action("GetCorporacionJSON", "Persona")',
                GetTipoDocumentoJSON: '@Url.Action("GetTipoDocumentoJSON", "Persona")',
                GetEstadoCivilJSON: '@Url.Action("GetEstadoCivilJSON", "Persona")',
                GetSexoJSON: '@Url.Action("GetSexoJSON", "Persona")'

            };

            project.Persona.Initialize(actionUrls);

        });

    </script>
}