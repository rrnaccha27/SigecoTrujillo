            SetDataExcel: '@Url.Action("SetDataExcel", "ReporteFinanzas", new { area = "Comision" })',
            GenerarExcel: '@Url.Action("GenerarExcel", "ReporteFinanzas", new { area = "Comision" })',
            ReporteDetalleComSup: '@Url.Action("ReporteDetalleComisionSupervisores", "ReporteFinanzas", new { area = "Comision" })',
            ReporteContratoComision: '@Url.Action("ReporteContratoComisionSupervisores", "ReporteFinanzas", new { area = "Comision" })',
