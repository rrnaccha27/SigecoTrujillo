@model SIGEES.Web.Models.Bean.BeanItemTipoAcceso

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="hdCodigo" />
<input type="hidden" id="hdNombre" />
<input type="hidden" id="hdEstado" />
<input type="hidden" id="hdFila" />
<input type="hidden" id="hdColumna" />
<input type="hidden" id="hdCantidadRegistros" />
<input type="hidden" id="hdCodigoEquivalencia" />

<div style="width: 99%; background-color: #D3EBDE; vertical-align: middle; padding-top: 2%; padding-bottom: 2%; padding-left: 1%">
    <center>
        <h2>Vendedores</h2>
    </center>
    <br />
    <div style="width: 100%">
        <form id="frm_consultar" method="post">
            <table style="width:100%">
                <tr>
                    <td style="width:14%">
                        <label class="colGridModal">Canal de Ventas</label>
                    </td>
                    <td style="width:17%">
                        <input class="easyui-combobox" id="cboCanalFiltro" data-options="required:false,novalidate:true,validType:'restricted[\'#cboCanalFiltro\']'" name="cboCanalFiltro" style="width: 95%" />
                    </td>
                    <td style="width:7%;text-align:right">
                        <label class="colGridModal">Grupo</label>
                    </td>
                    <td style="width:24%">
                        <input class="easyui-combobox" id="cboGrupoFiltro" data-options="required:false,novalidate:true,validType:'restricted[\'#cboGrupoFiltro\']'" name="cboGrupoFiltro" style="width: 95%" />
                    </td>
                    <td style="width:8%;text-align:right">
                        <label class="colGridModal">Nombres</label>
                    </td>
                    <td style="width:25%">
                        <input class="easyui-textbox" id="nombre" name="nombre" style="width: 99%" />
                    </td>
                    <td style="width:5%">
                        &nbsp;
                    </td>

                </tr>
            </table>
        </form>
    </div>
    <br />
    <div style="width: 100%">
        @if (Model.estadoLectura.CompareTo("A") == 0)
        {
            <a href="javascript:GetAllJson()" id="btnBuscar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-search'">Buscar</a>
            <a href="javascript:void(0)" id="btnDetalle" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-detail'">Detalle</a>
        }
        @if ((Model.estadoEscritura.CompareTo("A") == 0) && (Model.estadoEscrituraPersonal.CompareTo("A") == 0))
        {
            <a href="javascript:Crear()" id="btnNuevo" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-add'">Crear</a>
        }
        @if ((Model.estadoModificacion.CompareTo("A") == 0) && (Model.estadoEscrituraPersonal.CompareTo("A") == 0))
        {
            <a href="javascript:void(0)" id="btnModificar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="disabled:true,iconCls:'icon-edit'">Modificar</a>
        }
        @if ((Model.estadoEliminacion.CompareTo("A") == 0) && (Model.estadoEscrituraPersonal.CompareTo("A") == 0))
        {
            <a href="javascript:void(0)" id="btnDesactivar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="disabled:true,iconCls:'icon-cancel'">Desactivar</a>
            <a href="javascript:void(0)" id="btnActivar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="disabled:true,iconCls:'icon-ok'">Activar</a>
        }
        @if ((Model.estadoLectura.CompareTo("A") == 0) && (Model.estadoEscrituraPersonal.CompareTo("A") == 0))
        {
            <a href="javascript:fnReporte()" id="btnImprimir" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-print'">Imprimir Reporte</a>
        }
    </div>
</div>
<br />
<div style="width: 99%; padding-left: 1%">
    @if (Model.estadoLectura.CompareTo("A") == 0)
    {
        <table id="DataGrid" style="width: 100%"></table>
    }
</div>

<div id="dlgRegistro" class="easyui-dialog" data-options="modal:true,closed:true,buttons:'#divRegistroBotones'"
     style="width: 65%; height: 500px; padding: 4px; line-height: 10px;">
</div>

<div id="dlgDetalle" class="easyui-dialog" data-options="modal:true,closed:true,buttons:'#divRegistroBotonesDetalle'"
     style="width: 65%; height: 500px; padding:4px; line-height: 10px;">
</div>

<div id="div_reporte_personal" class="easyui-dialog" data-options="resizable:true,modal:true,closed:true"
     style="width: 100%; height: 80%;line-height: 20px;"></div>

<script type="text/javascript" src="~/Areas/Comision/Scripts/Views/Personal/personal.index.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var actionUrls =
        {
            GetListarCanalJson: '@Url.Action("GetListarCanalJson", "Personal", new { area = "Comision" })',
            GetListarGrupoJson: '@Url.Action("GetListarGrupoJson", "Personal", new { area = "Comision" })',
            GetAllJson: '@Url.Action("GetAllJson", "Personal", new { area = "Comision" })',
            Eliminar: '@Url.Action("Eliminar", "Personal", new { area = "Comision" })',
            Desactivar: '@Url.Action("Desactivar", "Personal", new { area = "Comision" })',
            Activar: '@Url.Action("Activar", "Personal", new { area = "Comision" })',
            Registro: '@Url.Action("_Registro", "Personal", new { area = "Comision" })',
            Detalle: '@Url.Action("_Detalle", "Personal", new { area = "Comision" })',
            Reporte: '@Url.Action("_Reporte", "Personal", new { area = "Comision" })',
            GetCantidadBloqueo: '@Url.Action("GetCantidadBloqueo", "Personal", new { area = "Comision" })'


        };

        project.PersonalIndex.Initialize(actionUrls);
    });


</script>

