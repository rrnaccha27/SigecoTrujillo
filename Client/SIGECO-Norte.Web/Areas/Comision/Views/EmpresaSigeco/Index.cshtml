@model SIGEES.Web.Models.Bean.BeanItemTipoAcceso

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="width: 99%; background-color: #D3EBDE; vertical-align: middle; padding-top: 2%; padding-bottom: 2%; padding-left: 1%">
    <center>
        <h2>Listado de Empresa</h2>
    </center>
    <br />

    <br />
    <div style="width: 100%">
        @if (Model.estadoLectura.CompareTo("A") == 0)
        {
            <a href="javascript:GetAllJson()" id="btnBuscar" class="easyui-linkbutton" style="background-color: #252E3D; color: white; padding: 2px 15px 2px 15px; " data-options="plain:true,iconCls:'icon-search'">Buscar</a>
        }
        @if (Model.estadoEscritura.CompareTo("A") == 0)
        {
            <a href="javascript:fnNuevaEmpresa()" id="btnNuevo" class="easyui-linkbutton" style="background-color: #252E3D; color: white; padding: 2px 15px 2px 15px; " data-options="plain:true,iconCls:'icon-add'">Crear</a>
        }
        @if (Model.estadoModificacion.CompareTo("A") == 0)
        {
            <a href="javascript:fnModificarEmpresa()" id="btnModificar" class="easyui-linkbutton" style="background-color: #252E3D; color: white; padding: 2px 15px 2px 15px; " data-options="plain:true,iconCls:'icon-edit'">Modificar</a>
        }
        @if (Model.estadoEliminacion.CompareTo("A") == 0)
        {
            <a href="javascript:Desactivar()" id="btnDesactivar" class="easyui-linkbutton" style="background-color: #252E3D; color: white; padding: 2px 15px 2px 15px; " data-options="plain:true,iconCls:'icon-cancel'">Desactivar</a>

        }

    </div>
</div>
<br />
<div style="width: 99%; padding-left: 1%">
    @if (Model.estadoLectura.CompareTo("A") == 0)
    {
        <table id="dgv_empresa" style="width: 100%"></table>
    }
</div>

<div id="div_registrar_empresa" class="easyui-dialog" data-options="modal:true,closed:true,buttons:'#divRegistroBotones'"
     style="width: 65%; height: 530px; padding: 10px 20px; line-height: 10px;">
</div>



<script type="text/javascript" src="~/Areas/Comision/Scripts/Views/empresa/empresa.index.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        var actionUrls =
        {
            GetRegistrosJSON: '@Url.Action("GetRegistrosJSON", "EmpresaSigeco", new { area = string.Empty })',
            Registro: '@Url.Action("_Registro", "EmpresaSigeco", new { area = "Comision" })'
        };

        project.index.Initialize(actionUrls);
    });
</script>


