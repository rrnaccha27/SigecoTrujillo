@model SIGEES.Web.Models.Bean.BeanItemTipoAcceso

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 99%; background-color: #D3EBDE; vertical-align: middle; padding-top: 2%; padding-bottom: 2%; padding-left: 1%">
    <center>
        <h2>Vendedores No Validados</h2>
    </center>
    <br />
    <div style="width: 100%">
        @if (Model.estadoLectura.CompareTo("A") == 0)
        {
            <a href="javascript:GetAllJson()" id="btnBuscar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-search'">Buscar</a>
            <a href="javascript:void(0)" id="btnDetalle" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-detail'">Detalle</a>
        }
        @if ((Model.estadoEscritura.CompareTo("A") == 0) && (Model.estadoEscrituraPersonal.CompareTo("A") == 0))
        {
            <a href="javascript:void(0)" id="btnGuardar" class="easyui-linkbutton" style="padding: 2px 15px 2px 15px; " data-options="iconCls:'icon-save'">Guardar Validación</a>
        }
    </div>
</div>
<br />
<div style="width: 99%; padding-left: 1%">
    @if (Model.estadoLectura.CompareTo("A") == 0)
    {
        <table id="DataGrid" style="width: 100%"></table>
    }
</div>

<div id="dlgDetalle" class="easyui-dialog" data-options="modal:true,closed:true,buttons:'#divRegistroBotonesDetalle'"
     style="width: 65%; height: 473px; padding:4px; line-height: 10px;">
</div>

<script type="text/javascript" src="~/Scripts/Aditional/datagrid-export.js"></script>
<script type="text/javascript" src="~/Areas/Comision/Scripts/Views/PersonalNoValidado/personalnovsalidado.index.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var actionUrls =
        {
            GetAllJson: '@Url.Action("GetAllJson", "PersonalNoValidado", new { area = "Comision" })',
            Validar: '@Url.Action("Validar", "PersonalNoValidado", new { area = "Comision" })',
            Detalle: '@Url.Action("_Detalle", "Personal", new { area = "Comision" })'
        };

        project.PersonalIndex.Initialize(actionUrls);
    });


</script>

