@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 99%; background-color: #D3EBDE; vertical-align: middle; padding-top: 2%; padding-bottom: 1%; padding-left: 1%">

    <center>
        <h2>Reporte de Personal</h2>
    </center>
</div>

<div style="width: 99%; padding-left: 1%; ">
    <div class="panelGridIndex">
        <div class="rowGridIndex">
            <label class="colGridModal">Fecha Incio</label>
            <input class="easyui-datebox" id="fechaInicio" name="fechaInicio" style="width:100%;">
        </div>
        <div class="rowGridIndex">
            <label class="colGridModal">Fecha Fin</label>
            <input class="easyui-datebox" id="fechaFin" name="fechaFin" style="width:100%;">
        </div>
        <div class="rowGridIndexDouble" style="text-align: center">
            <label class="colGridModal">Realizar Búsqueda</label><br />
            <a href="#" class="easyui-linkbutton" id="btnBuscar" name="btnBuscar" iconcls="icon-search">Ver</a>&nbsp&nbsp
            <a href="#" class="easyui-linkbutton" id="btnEXCEL" name="btnEXCEL">EXCEL</a>&nbsp&nbsp
            <a href="#" class="easyui-linkbutton" id="btnPDF" name="btnPDF">PDF</a>

        </div>
        <div class="rowBoth" />
    </div>
</div>
<br/>
<div style="width: 99%; padding-left: 1%; ">
    <iframe id="iframeVisualizar" style="position: absolute; width: 98%; height: 75%"></iframe>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Areas/Comision/Scripts/Views/ReporteGeneral/project.ReporteGeneral.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            var actionUrls =
            {
                Ver: '@Url.Action("VerPersonal", "ReporteGeneral")',
                ExportarPDF: '@Url.Action("ExportarPersonalPDF", "ReporteGeneral")',
                ExportarEXCEL: '@Url.Action("ExportarPersonalEXCEL", "ReporteGeneral")'
            };

            var identificador = 'rango_fecha';
            
            project.ReporteGeneral.Initialize(actionUrls, identificador);

        });

    </script>
}